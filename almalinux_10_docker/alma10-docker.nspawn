[Exec]
Boot=true
PrivateUsers=no
Hostname=alma10-docker
SystemCallFilter=@keyring bpf
#Capability=CAP_NET_ADMIN CAP_NET_RAW

[Network]
Bridge=br0
Private=no  # Ensures bridge attachment works with host-shared elements
#VirtualEthernet=no


[Files]
